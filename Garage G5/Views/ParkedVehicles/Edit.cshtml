@model Garage_G5.Models.ParkedVehicle

@{ ViewData["Title"] = "Edit"; }

<!-- Section: Tables -->
<section id="tables" class="my-5">

    <!-- Heading -->
    <div id="h1"><h1 class="h1">Edit</h1></div>@*btn btn-primary btn-lg btn-block*@
    <a asp-action="Create" type="button" class="btn btn-info btn">Park New</a>

    <div id="subHeading">
        <!-- Subheading -->
        <h2 class="sh2 mb-4" style="clear:both;">Edit @Html.DisplayFor(model => model.RegistrationNum)</h2>
    </div>
    <!-- Grid row -->
    <div class="row mb-5">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="VehicleType" class="control-label"></label>
                            <select asp-for="VehicleType" asp-items="@Html.GetEnumSelectList<VehicleType>()" class="form-control"></select>
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RegistrationNum" class="control-label"></label>
                            <input asp-for="RegistrationNum" class="form-control" />
                            <span asp-validation-for="RegistrationNum" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Color" class="control-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Brand" class="control-label"></label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Model" class="control-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WheelsNum" class="control-label"></label>
                            <input asp-for="WheelsNum" class="form-control" />
                            <span asp-validation-for="WheelsNum" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*<input type="submit" value="Save" class="btn btn-primary" onclick="confirmationAlert()" />*@
                            <a asp-action="Index" id="NoPrint" type="button" class="btn btn-outline-info noSpace">Back</a>
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModalCenter">Confirm</button>
                        </div>

                        <!-- Button trigger modal -->
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Confirm edit</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to save this edit to @Html.DisplayFor(model => model.VehicleType) @Html.DisplayFor(model => model.RegistrationNum).
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        @*<button type="button" class="btn btn-primary">Save changes</button>*@
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>


                    </form>
                </div>
            </div>

<div>
</div>
        </div>
        <!-- Grid column -->
    </div>
    <!-- Grid row -->
</section>
    <a asp-action="SearchAndFilterView">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
