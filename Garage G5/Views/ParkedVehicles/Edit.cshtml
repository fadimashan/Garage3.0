@model Garage_G5.Models.ParkedVehicle

@{ ViewData["Title"] = "Edit"; }

<div id="subHeading">
    <!-- Subheading -->
    <h2 class="sh2 mb-4" style="clear:both;">Modifying the details for <strong style="text-decoration:underline">@Html.DisplayFor(model => model.RegistrationNum)</strong></h2>
</div>
<!-- Grid row -->
<div class="row mb-5">

    <!-- Grid column -->
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="TypeOfVehicle.TypeName" class="control-label"></label>
                        <select asp-for="TypeOfVehicle.TypeName" asp-items="@Model.GetVehiclesType" class="form-control"></select>
                        <span asp-validation-for="TypeOfVehicle.TypeName" class="text-danger"></span>
                        <p></p>

                        <label asp-for="RegistrationNum" class="control-label"></label>
                        <input asp-for="RegistrationNum" class="form-control" />
                        <span asp-validation-for="RegistrationNum" class="text-danger"></span>
                        <p></p>

                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                        <p></p>

                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                        <p></p>

                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                        <p></p>

                        <label asp-for="WheelsNum" class="control-label"></label>
                        <input asp-for="WheelsNum" class="form-control" />
                        <span asp-validation-for="WheelsNum" class="text-danger"></span>
                        <p></p>

                    </div>

                    <div type="hidden">
                        <input id="EnteringTime" name="EnteringTime" type="hidden" asp-for="EnteringTime" />
                        <span type="hidden" asp-validation-for="EnteringTime" class="text-danger"></span>
                    </div>


                    <button type="button" class="btn btn-outline-danger noSpace" data-toggle="modal" data-target="#exampleModalCenter">Confirm</button>
                    <a asp-action="GeneralInfoGarage" id="NoPrint" type="button" class="btn btn-outline-info">Cancel</a>


                    <!-- Button trigger modal -->
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Confirm edit</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to save this edit to @Html.DisplayFor(model => model.TypeOfVehicle.TypeName) @Html.DisplayFor(model => model.RegistrationNum).
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
        </div>

    </div>
    <!-- Grid column -->
</div>
<!-- Grid row -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
