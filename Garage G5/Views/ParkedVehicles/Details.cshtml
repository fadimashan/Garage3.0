@model Garage_G5.Models.ParkedVehicle

@{
    ViewData["Title"] = "Details";
}

@await Html.PartialAsync("NavButtonsPartial", "Details")

<div id="subHeading">
    <!-- Subheading -->
    <h2 class="sh2 mb-4" style="clear:both;">Details for @Html.DisplayFor(model => model.RegistrationNum)</h2>
</div>
<!-- Grid row -->
<div class="row mb-5">

    <!-- Grid column -->
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VehicleType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VehicleType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegistrationNum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegistrationNum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WheelsNum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WheelsNum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnteringTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnteringTime)
            </dd>
        </dl>
    </div>
    <div id="endButtons">
        <a id="NoPrint" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-outline-primary">Edit</a>
        <a asp-action="GeneralInfoGarage" id="NoPrint" type="button" class="btn btn-outline-info">Back</a>
    </div>
